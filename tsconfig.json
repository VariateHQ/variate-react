{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "resolveJsonModule": true
  },
  "typeRoots": [
    "./src/@types",
    "jest",
    "emzyne"
  ],
  "include": [
    "./src/**/**/*",
    "./tests/**/**/*"
  ]
}